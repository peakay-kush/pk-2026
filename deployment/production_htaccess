# PK Automations Production Configuration
Options -Indexes
DirectoryIndex index.php

# Handle WebP Mime Type
<IfModule mod_mime.c>
    AddType image/webp .webp
</IfModule>

# Protection for sensitive files
<FilesMatch "^\.env|composer\.(json|lock)|.*\.sql|README\.md|ADMIN_README\.md">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protection for system folders
<DirectoryMatch "^(logs|includes|migrations)">
    Order allow,deny
    Deny from all
</DirectoryMatch>

# Custom Error Page
ErrorDocument 404 /404.php

# Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Sitemap XML Redirect
    RewriteRule ^sitemap\.xml$ sitemap.php [L]

    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Clean URLs (Remove .php extension)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^([^\.]+)$ $1.php [NC,L]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
</IfModule>
